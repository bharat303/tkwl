<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<div class='row'>
<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" id="forgot-password">
  <div class="panel panel-default  registration-panel">
    <div class="panel-body">
		<h2 class='lead text-center'><%= Spree.t(:forgot_password) %></h2>
			<p class='text-muted text-center'><%= Spree.t(:instructions_to_reset_password) %></p>
	
	<div class='row'>
		<div class='col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1'>	
      <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>
     <div class='form-group'>
          <%#= f.label :email, Spree.t(:email) %>
          <%= f.email_field :email, :class => "form-control input-lg ", :placeholder => Spree.t(:email) %>
</div><!-- form-group -->
     <div class='form-group'>
          <%= f.submit Spree.t(:reset_password), :class => 'btn btn-lg btn-success btn-block' %>
</div><!-- form-group -->     
      <% end %>
 		</div><!-- col -->
	</div><!-- row -->
    </div><!-- panel-body -->
  </div><!-- panel -->
</div><!-- col -->
</div><!-- row -->