<fieldset id="password-credentials">
  
  <div class="form-group">
    <%= f.email_field :email, :class => 'form-control input-lg', :placeholder => Spree.t(:email) %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, :class => 'form-control input-lg', :placeholder => Spree.t(:password) %>
  </div> 
  <div class="form-group">
    <%= f.password_field :password_confirmation, :class => 'form-control input-lg', :placeholder => Spree.t(:confirm_password) %>
  </div> 

  <div class="form-group">
  	<%#= f.label :language, Spree.t(:language) %>
    <%= f.select(:language, options_for_select(supported_locales_options, I18n.locale),{}, { :class => 'form-control input-lg' })%>
  </div>
</fieldset>
<div data-hook="signup_below_password_fields"></div>